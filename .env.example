# DataDog Configuration
# Copy this file to .env and fill in your values
# Or export these variables in your shell before running docker-compose

# Required: Your DataDog API key
DD_API_KEY=your_datadog_api_key_here
# Optional: Used for Dashboard creation script, this will need the appropriate scope set.
DD_APP_KEY=your_datadog_app_key_here
# DataDog site (default: datadoghq.com)
# Use datadoghq.eu for EU region
DD_SITE=datadoghq.com

# Shared Datadog configuration for all services
DD_AGENT_HOST=datadog-agent
DD_TRACE_AGENT_PORT=8126
DD_DOGSTATSD_PORT=8125
DD_SERVICE=gtfspb-2-mfjson
DD_ENV=production
DD_VERSION=0.1.0
DD_TRACE_ENABLED=true
DD_LOGS_INJECTION=true
DD_TRACE_SAMPLE_RATE=1.0


